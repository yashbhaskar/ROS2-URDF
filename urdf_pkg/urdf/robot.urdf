<?xml version="1.0"?>
<robot name="materials">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.08 0.08 0.08"/>
      </geometry>
      <material>
      <color rgba="0.6 1 0.8 1"/>
      </material>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

    <link name="lidar">
    <visual>
      <origin rpy="3.17 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="lidar"/>
    <origin rpy="0 0 0" xyz="-0.01 -0.001 0.05"/>
  </joint>



  <joint name="left_back_wheel_joint" type="continuous">
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin rpy="0 0 0" xyz="0.001 0.043 -0.04"/>
  </joint>

  <joint name="right_back_wheel_joint" type="continuous">
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin rpy="0 0 0" xyz="0.001 -0.043 -0.04"/>
  </joint>

</robot>